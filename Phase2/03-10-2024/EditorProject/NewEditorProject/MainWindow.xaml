<Window x:Class="EditorNewProject.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EditorNewProject"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Canvas>
        <Button x:Name="btnOpen" Content="Open" Canvas.Left="90" Canvas.Top="49" HorizontalAlignment="Left" VerticalAlignment="Top" Width="80" Height="50" Click="btnOpen_Click"/>
        <Button x:Name="btnSave" Content="Save" Canvas.Left="200" Canvas.Top="49" Width="80" Height="50" HorizontalAlignment="Left" VerticalAlignment="Center" Click="btnSave_Click"/>
        <Button x:Name="btnFont__" Content="Font" Canvas.Left="305" Canvas.Top="49" Width="80" Height="50" HorizontalAlignment="Left" VerticalAlignment="Center" Click="btnFont___Click"/>
        <Button x:Name="btnColor" Content="Color.." Canvas.Left="410" Canvas.Top="49" Width="80" Height="50" HorizontalAlignment="Left" VerticalAlignment="Center" Click="btnColor_Click"/>
        <TextBox x:Name="txtEditor" AcceptsReturn="True" Canvas.Left="90" TextWrapping="Wrap" Text="C# and WPF" Canvas.Top="149" Width="410" HorizontalAlignment="Left" VerticalAlignment="Center" Height="162"/>

    </Canvas>
</Window>
